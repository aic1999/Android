<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#696969"
    android:layout_width="70dp"
    android:layout_height="match_parent"
    >


    <ToggleButton
        android:visibility="invisible"
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#BFBFBF"
        android:textColor="#F4F4F4"
        android:text="ToggleButton"
        android:textOn="完成"
        android:textOff="设置"
        android:drawableLeft="@drawable/set"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />



    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="操作区"
        android:background="@drawable/txcolor"
        android:textColor="#F4F4F4"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/bt_voal"
        android:layout_alignBottom="@+id/bt_voal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/t2"
        android:background="@drawable/txcolor"
        android:textColor="#F4F4F4"        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="功能区"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/t1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />




        <TextView
            android:id="@+id/t3"
            android:background="@drawable/txcolor"
            android:textColor="#F4F4F4"        android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textSize="20sp"
            android:layout_above="@+id/toggleButton"
            android:layout_alignParentLeft="true" />
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="25dp"
            android:background="#00000000"
            android:layout_height="25dp"
            android:src="@drawable/set"
            android:layout_alignTop="@+id/t3"
            android:layout_alignParentRight="true" />

    <TextView
        android:clickable="true"
        android:id="@+id/t4"
        android:background="@drawable/txcolor"
        android:textColor="#F4F4F4"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:text="帮助"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="32dp"
        android:layout_alignParentRight="true" />




</RelativeLayout>
