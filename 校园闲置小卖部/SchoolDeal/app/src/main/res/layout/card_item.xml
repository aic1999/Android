<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        android:clickable="true"
        android:id="@+id/card_view"
        app:cardCornerRadius="7dp"
        app:cardElevation="3dp"
        android:elevation="12dp"
        android:layout_margin="1dp">

        <RelativeLayout
            android:id="@+id/rl_post"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_16">
            <TextView
                android:id="@+id/tv_post_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_56"
                android:layout_marginTop="@dimen/dp_4"
                android:ellipsize="end"
                android:lines="2"
                android:text="纵观技术的发展，紧跟时代的潮流，活在自己的世界，分享技术的小圈。上谈【安卓】，下论【苹果】。以扯淡的态度，面对操蛋的技术，用幽默的语言，诠释开发的经典。"
                android:textColor="@color/light_black"
                android:textSize="15dp" />
            <ImageView
                android:id="@+id/post_img"
                android:visibility="visible"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:scaleType="fitXY"
                android:layout_below="@+id/tv_post_content"
                android:layout_width="200dp"
                android:layout_height="150dp" />
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_below="@+id/post_img"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvPraise"
            android:layout_width="wrap_content"
            android:text="阅览:165"
            android:layout_marginLeft="15dp"
            android:textSize="11dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tv_url"
            android:visibility="gone"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:gravity="right"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_post_name"
            android:layout_width="wrap_content"
            android:text="username"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_post_time"
            android:layout_marginTop="@dimen/dp_4"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:text="2017/06/01"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

