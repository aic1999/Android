<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fra_More">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#eeeeee"
                />
            <RelativeLayout
                android:id="@+id/user_nick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"

                >
                <TextView
                    android:textSize="16dp"
                    android:id="@+id/user_nick_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                  style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:text="昵称"
                    android:layout_centerVertical="true"
                    android:paddingTop="8dip"
                    android:paddingBottom="8dip"
                    />
                <TextView

                    android:id="@+id/fra_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击登录"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:paddingTop="8dip"
                    android:paddingBottom="8dip"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#eeeeee"
                />

            <RelativeLayout
                android:id="@+id/sex_choice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                >
                <TextView
                    android:id="@+id/sex_choice_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="性别"
                    android:textSize="16dp"
                    android:layout_centerVertical="true"
                    android:paddingTop="8dip"
                    android:paddingBottom="8dip"
                    />
                <TextView
                    android:id="@+id/sex_choice_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:text="未知"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"

                    />


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/user_photo_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="我的空间"
                    android:textSize="16dp"
                    android:layout_centerVertical="true"
                    android:paddingTop="8dip"
                    android:paddingBottom="8dip"
                    />
                <TextView
                    android:id="@+id/user_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:text=">>"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"

                    />


            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#eeeeee"
                />


            <RelativeLayout
                android:id="@+id/user_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                >
                <TextView
                    android:id="@+id/user_sign_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="个性签名"
                    android:textSize="16dp"
                    android:layout_centerVertical="true"
                    android:paddingTop="8dp"
                    android:layout_marginTop="5dp"

                    />
                <TextView
                    android:id="@+id/tv_userword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击填写"
                     android:layout_marginBottom="5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:paddingTop="8dip"
                    android:paddingBottom="8dip"
                    android:gravity="right"
                    android:layout_alignTop="@id/user_sign_tips"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_toEndOf="@+id/user_sign_tips" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="#eeeeee"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#eeeeee"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#eeeeee"
                />

            <TextView
                android:id="@+id/btn_user_logout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
               android:background="@color/red"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="退出"
                android:paddingTop="12dip"
                android:paddingBottom="12dip"
                android:layout_marginTop="48dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</FrameLayout>
